@model IEnumerable<CourierManagement.DataModel.Customer>
@{
}
<header>
    <link href="~/css/dataTable.css" rel="stylesheet" />
</header>

<div class="col-12">
    <div class="card shadow-lg mb-4">
        <div class="card-header bg-secondary text-white text-center">
            <h4 class="mb-0">All Customers</h4>
        </div>
        <div>
            <table class="table table-hover table-bordered text-center align-middle" id="OrderTable">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Phone</th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">City</th>
                        <th scope="col">Address</th>
                    </tr>
                        
                </thead>
                <tbody>
                    @foreach (var customer in Model){
                    <tr>
                        <td scope="col">@customer.IdNum</td>
                        <td scope="col">@customer.Customer_Phone</td>
                        <td scope="col">@customer.Customer_Name</td>
                        <td scope="col">@customer.Customer_Email</td>
                        <td scope="col">@customer.Customer_City</td>
                        <td scope="col">@customer.Customer_Address</td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="~/js/jquery-3.7.1.js"></script>
<script src="~/js/dataTables.js"></script>

<script>
    new DataTable('#OrderTable');

</script>